@tailwind base;

body, html {
  @apply h-full;
}

.title {
  @apply font-title uppercase;
}

.hero__overlay {
  transform: translateX(-100%);
  transition: transform .2s ease-in-out;
}

.hero__menu_opened .hero__overlay {
  transform: translateX(0%);
}

/** On pourrait utiliser la configuration de tailwind mais parcel ne r√©sout pas bien le fichier **/
.bg-hero-mobile {
  background: url(/images/mobile/image-hero.jpg);
}

@tailwind components;
@tailwind utilities;